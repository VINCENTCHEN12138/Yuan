<view class="container">
    <view style="display:flex;flex-direction:column;align-items:center;">
        <image style="width:200rpx;height:200rpx;margin:20rpx;border-radius:50%;" src="{{userInfo.avatarUrl}}" mode="cover"></image>
    </view>
</view>
<van-cell-group>
    <van-cell title="我的订单" url="../../pages/Order/index" />
    <van-cell title="我的收货信息" bind:click="openpopup" />
    <van-cell title="我的收藏夹" url="../../pages/MyFavorites/index" />
</van-cell-group>
<van-popup show="{{ show }}" bind:close="onClose">
    <van-cell-group>
        <van-cell>
            <block wx:for="{{address}}" wx:key="{{index}}">
                <van-field icon="close" bind:click-icon="delete" wx:if="{{item.value}}" data-index="{{index}}" value="{{ item.value }}" placeholder="{{item.value}}" focus border="{{ false }}" bind:change="onChange" />
                <van-field wx:else value="{{ item.value }}" data-index="{{index}}" placeholder="请输入地址" border="{{ false }}" focus bind:change="onChange"></van-field>
            </block>
        </van-cell>
        <van-cell>
            <van-button type="info" bind:click="add" type="primary">新增</van-button>
            <van-button type="info" bind:click="confirm">确定</van-button>
        </van-cell>
    </van-cell-group>
</van-popup>